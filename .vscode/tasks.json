{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++",
            "command": "cl",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe${workspaceFolder}/build/main.exe",
                "/Fd${workspaceFolder}/build/vc140.pdb",
                "/Fo${workspaceFolder}/build/main.obj",
                "/utf-8",
                "${workspaceFolder}/src/main.cpp",
                // "/Ox" // 是否尽可能优化
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "C++ build by MSVC."
        }
    ],
    "version": "2.0.0"
}
