{
  // Please edit the configs to fit on your C++ environment
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "cppbuild",
      "command": "g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}/src/main.cpp",
        "-o",
        "${workspaceFolder}/_debug/test.exe",
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    }
  ]
}
